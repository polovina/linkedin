-#  This file is app/views/boars/index.html.haml
%body
  %div{:class=>"left_column"}
    %div#boars
      %table#boars
        %tbody
          %tr
            %td
            %td
              =link_to image_tag("add_boar.png"), new_boar_path
            
            %tr
          - @boars.each do |boar|
            %tr
              %td= link_to (boar.active ? image_tag("active_boar.png") : image_tag("passive_boar.png")), boar_path(boar)+"/toggle"
              %td= button_to boar.title, edit_boar_path(boar), :class=>"boar"
